<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ProductTestServlet</servlet-name>
        <servlet-class>com.asylzhan.shop.JavaEE_midterm_shop.ProductTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductTestServlet</servlet-name>
        <url-pattern>/producttest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.asylzhan.shop.JavaEE_midterm_shop.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
<!--    filter-->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.asylzhan.shop.JavaEE_midterm_shop.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/AppExceptionHandler</location>
    </error-page>

    <error-page>
        <exception-type>javax.servlet.ServletException</exception-type>
        <location>/AppExceptionHandler</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/AppExceptionHandler</location>
    </error-page>

</web-app>
